@model IEnumerable<E_Commerce.Models.Article>
@{
    ViewBag.Title = "Index";
}

@using GridMvc.Html
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="@Url.Content("~/Content/Gridmvc.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/bootstrap.min.css")" rel="stylesheet" />
    <script src="~/scripts/jquery-1.10.2.min.js"></script>
    <script src="~/scripts/gridmvc.min.js"></script>

</head>
<body>

    @** <div style="width:1000px;background-color:blue;font-size:large;font-family:Arial;color:black">**@
    @*<div style="width:1000px;font-size:large;font-family:Arial;color:black">*@
    @Html.Grid(Model).Columns(columns =>
{
columns.Add(c => c.Designation).Titled("designation").Filterable(true);

columns.Add(c => c.PrixU).Titled("PrixU").Filterable(true); ;
columns.Add(c => c.NumArticle).Titled("NumArticle").Filterable(true);
columns.Add().Encoded(false).Sanitized(false).Titled("Image").Filterable(true).RenderValueAs(c => @<div style="width:100px;height:100px"><img alt="Image" src="~/Image/@Url.Content(c.Photo)" )" height="200" width="200" /></div>);

             columns.Add().Encoded(false).Sanitized(false).Titled("Detail").SetWidth(30).RenderValueAs(c => Html.ActionLink(" Detail", "Detail", new { id = c.NumArticle }));


         }).WithPaging(3).Sortable(true);


    @*</div>*@

</body>
</html>
