
@Html.DropDownList("select", ViewBag.etudiant as SelectList, "Selectionner Article");


<script>
    $(function () {

        $("#select").change(function () {
            $.ajax({
                type: "POST",
                url: "/Articles/AffichesArticles",
                datatype: "Json",
                data: { value: $('#select').val() }
            }).done(function (data) {
                $("#Here").html(data);
            });

        });
    });
    </script>

