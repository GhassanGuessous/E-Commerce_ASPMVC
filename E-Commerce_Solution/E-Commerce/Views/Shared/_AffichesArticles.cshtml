@model E_Commerce.Models.Article


<div class="pull-left">
    <br />
    <img src="~/Image/@Url.Content(ViewBag.photo)" height="350" width="350" />
    @using (Html.BeginForm("FileUpload", "Articles", FormMethod.Post,
                  new { enctype = "multipart/form-data" }))
    { 
        @Html.HiddenFor(model => model.NumArticle)
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="file" name="file" id="file" style="width: 100%;" /> <br />
            <input type="submit" value="Modifier Votre propre Image" class="btn btn-default" />
        </div>
    </div>

}
</div>
<div class="snip1265 pull-right">
    <br /><br />
    <div class="plan">
        <header>
            <i class="ion-ios-navigate-outline"></i>
            <h1 class="plan-title">
                @ViewBag.designation


            </h1>
            <h3><div class="plan-cost"><span class="plan-price">@ViewBag.prix Dh</span><span class="plan-type"></span></div></h3>
        </header>
        <ul class="plan-features">
            <li>
                il reste seulement dans Votre dépot @ViewBag.stock 
            </li>

        </ul>
        <div>
            @Html.ActionLink("modifier", "Edit", new { id = Model.NumArticle }) |
            @Html.ActionLink("Supprimer", "Delete", new { id = Model.NumArticle }) |
            
            @Html.ActionLink("Back to List", "Index")
        </div>

    </div>

</div>




