<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />

    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <link href="~/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/Gridmvc.css" rel="stylesheet" />
    <link href="~/Content/bootsrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/gridmvc.min.js"></script>
</head>
<body>
    <nav class="navbar bg-primary navbar-light navbar-fixed-top">

        <div class="container-fluid">
            <div class="navbar-header">
                @Html.ActionLink("  Espace Admnistrateur", "Index", "Home", new { area = "" }, new { @class = "glyphicon glyphicon-user navbar-brand menucustom " })
            </div>

            <ul class="nav navbar-nav  navbar-right">
                <li> @Html.ActionLink(" Commande", "Index", "Home", new { area = "" }, new { @class = "menucustom" })</li>
                <li> @Html.ActionLink(" Catalogue", "Index", "Home", new { area = "" }, new { @class = "menucustom glyphicon glyphicon-folder-open" })</li>
                <li> @Html.ActionLink(" Panier", "Index", "Home", new { area = "" }, new { @class = "menucustom glyphicon glyphicon-shopping-cart" })</li>
                <li>  @Html.ActionLink(" Convertisseur", "Index", "Home", new { area = "" }, new { @class = "menucustom" })</li>
                <li>@Html.ActionLink(" Se déconnecter", "Index", "Home", new { area = "" }, new { @class = "menucustom glyphicon glyphicon-off" })</li>
            </ul>
        </div>
    </nav>
    <br />

    <div class="container">
        <div class="row">
            <div class="col-sm-3">
                <table class="table">
                    <thead class="bg-primary">

                        <tr>
                            <th class="glyphicon glyphicon-dashboard "> Table de Bord</th>

                        </tr>
                    </thead>
                    <tbody>

                        <tr>

                            <td>@Html.ActionLink(" Articles", "Index", "Articles", new { area = "" }, new { @class = "glyphicon glyphicon-list-alt tablelien " })</td>
                        </tr>
                        <tr>

                            <td>@Html.ActionLink("Categories ", "Index", "Categories", new { area = "" }, new { @class = "glyphicon glyphicon-folder-open tablelien" })</td>
                        </tr>
                        <tr>

                            <td>@Html.ActionLink("Client", "Index", "Clients", new { area = "" }, new { @class = "glyphicon glyphicon-user tablelien" })</td>
                        </tr>
                        <tr>

                            <td>@Html.ActionLink("Statistiques", "Index", "Statistiques", new { area = "" }, new { @class = "glyphicon glyphicon-stats tablelien" })</td>
                        </tr>
                        <tr>

                            <td>
                                <a href="@Url.Action("Index","Home")" class="tablelien">
                                    <img src="@Url.Content("~/images/ameri.png")" /> Anglais
                                </a>
                            </td>
                        </tr>
                        <tr>

                            <td>
                                <a href="@Url.Action("Index","Home")" class="tablelien">
                                    <img src="@Url.Content("~/images/france.png")" />  Français
                                </a>
                            </td>
                        </tr>
                    </tbody>

                </table>
            </div>
            <div class="col-sm-9">@RenderBody()</div>

        </div>





        <footer></footer>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>