@{Layout = null;
    ViewBag.Title = "Index";
}


<script src="~/scripts/jquery-1.10.2.min.js"></script>

<script src="~/scripts/jquery.unobtrusive-ajax.min.js"></script>

<script>
        $(function () {
            $('#x').change(function (){
                $.ajax({
                    type: "POST",
                    url: "/Clients/AfficheDetails",
                    datatype: "Json",
                    data: { value: $('#x').val() }
                      }).done(function (data) {
                    $("#ici").html(data);
                });

            });
        });

</script>

<h2>Index</h2>
<div> choisir une catégorie: @Html.DropDownList("x", ViewBag.e as SelectList, "Selectionner categorie") </div>

<div id="ici">

</div>






