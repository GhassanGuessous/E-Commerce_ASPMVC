@model E_Commerce.Models.Categorie

@{
    /**/


    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewBag.Title = "Ajouter   Categorie";
}


<h2 class="jumbotron text-center">Ajouter un nouveau catégorie </h2>

<center>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-inline">



            <div class="form-group">
                @Html.Label("nom de catégorie", htmlAttributes: new { @class = "control-label " })

                @Html.EditorFor(model => model.NomCat, new { htmlAttributes = new { @class = "form-control input-lg" } })
                @Html.ValidationMessageFor(model => model.NomCat, "", new { @class = "text-danger " })
                @Html.ValidationMessage("CategorieExist", new { @class = "text-danger" })
                <input type="submit" value="Valider" class="btn btn-info" />
                <input type="reset" value="Annuler" class="btn btn-primary" />
            </div>


        </div>
    }
</center>

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
